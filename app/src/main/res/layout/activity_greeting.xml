<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="top|center"
    android:layout_height="match_parent"
    tools:context=".GreetingActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="#005EFF"
        android:text="Welcome to Ntshinga Management Booking App"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/name123"
        android:textSize="24dp"
        android:textStyle="italic"
        android:textColor="#FF070F"
        android:gravity="top|center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Add Patient Bookings"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#FF070F"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Delete Patient Bookings"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#FF5722"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Update Patient Bookings"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#FF070F"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search / View Patient Bookings "
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#FF5722"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Exit "
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#FF5722"/>



    </LinearLayout>
</ScrollView>