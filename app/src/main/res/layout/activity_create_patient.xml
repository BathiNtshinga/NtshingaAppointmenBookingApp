<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".CreatePatientActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new Patient Booking"
        android:id="@+id/name123"
        android:paddingTop="15dp"
        android:textSize="29sp"
        android:textStyle="italic|bold"
        android:textColor="#090988"
        android:gravity="top|center"
        />

    <EditText
        android:id="@+id/foldernr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name123"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Patient Folder Number."
        android:textColor="#090988"
        android:textSize="29sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/patname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name123"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Patient Name"
        android:textColor="#090988"
        android:textSize="29sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name123"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:hint="Enter Booking Date"
        android:textColor="#090988"
        android:textSize="29sp"
        android:textStyle="italic|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Booking"
        android:onClick="saveBooking"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF070F"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clearFields"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF070F"
        />

</LinearLayout>